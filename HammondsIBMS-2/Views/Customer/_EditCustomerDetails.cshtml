@model HammondsIBMS_Domain.Entities.Customers.Customer
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CustomerId)
    <fieldset>
        @Html.Partial("_NamesEdit", Model)
    </fieldset>
    <fieldset>
        @Html.EditorFor(model => model.Address, "_Address")
    </fieldset>
    <fieldset>
        @Html.EditorFor(model => model.ContactInfo, "_ContactInfo")
    </fieldset>                         
    <br />

    <div>
        @Html.FormSubmitButton()
        @Html.FormCancelButton()
    </div>
}

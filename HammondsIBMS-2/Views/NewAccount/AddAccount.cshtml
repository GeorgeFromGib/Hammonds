@using HammondsIBMS_Domain.Entities.Accounts
@model HammondsIBMS_2.ViewModels.Accounts.NewAccountVM
<div class="well well-small well-noBackground">
    @Html.ContentTitle(Html.Action("StepperHeader").ToHtmlString())

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Account Type</legend>
            <div class="control-group">
                @Html.LabelFor(model => model.AccountType, new { @class = "control-label" })
                <div class="controls">
                    @(Html.Telerik().DropDownListFor(o => o.AccountType)
                      .BindTo(new List<DropDownItem>(Enum.GetNames(typeof(AccountType)).Select(c => new DropDownItem { Value = c, Text = c })))
            //.ClientEvents(e => e.OnChange("ContractTypeChange")))
                      )
                    @Html.ValidationMessageFor(model => model.CustomerId)
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.StartDate, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.StartDate)
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Alternate Details</label>
                <div class="controls">
                    <fieldset>
                        <div class="control-group">
                            @Html.LabelFor(model => model.AlternateAddressInstructions, new { @class = "control-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.AlternateAddressInstructions)
                            </div>
                        </div>
                        @Html.EditorFor(model => model.AlternateAddress)

                    </fieldset>
                </div>
            </div>
        </fieldset>
        <div>
            @Html.Action("StepperControl")

        </div>
    }
</div>
